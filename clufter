from sys import argv, exit, path
from os.path import dirname, abspath
path.insert(0, reduce(lambda x, y: dirname(x), xrange(2), abspath(__file__)))

from clufter import main

if __name__ == '__main__':
    exit(main.run(argv[1:]))
